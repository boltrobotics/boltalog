// SYSTEM INCLUDES
#include <cinttypes>

// PROJECT INCLUDES
#include "logger.hpp" // class implemented

namespace slog {

std::unique_ptr<Logger> Logger::logger_;

///////////////////////////////////// PUBLIC ///////////////////////////////////

//=================================== OPERATIONS ===============================

// static
Logger* Logger::init(
    const std::string& ident, int facility, int level) {

    if (!logger_) {
        logger_.reset(new Logger(ident, facility, level));
    }

    return instance();
}

// static
Logger* Logger::instance() {
    return logger_.get();
}

int Logger::level(int eventId, int level) {
    int event_id = -1;

    if (std::size_t(eventId) < levels_.size()) {
        event_id = levels_[eventId];
        levels_[eventId] = level;

        if (eventId == 0) {
            setlogmask(LOG_UPTO(level));
        }
    }
    return event_id;
}

bool Logger::filter(int eventId) const {
    if (std::size_t(eventId) < levels_.size()
            && levels_[eventId] <= levels_[0]) {
        return true;
    } else {
        return false;
    }
}

.for log.event
void Logger::$(event.name)Impl(
.for event.param
.   if last()
    $(param.type) $(param.name)) const {
.   else
    $(param.type) $(param.name),
.   endif
.endfor

    syslog(levels_[$(event.id)], "$(event.id)\
.for event.param
,%\
.   if param.type = "uint8_t"
" PRIu8 "\
.   elsif param.type = "int8_t"
" PRId8 "\
.   elsif param.type = "uint16_t"
" PRIu16 "\
.   elsif param.type = "int16_t"
" PRId16 "\
.   elsif param.type = "uint32_t"
" PRIu32 "\
.   elsif param.type = "int32_t"
" PRId32 "\
.   elsif param.type = "uint64_t"
" PRIu64 "\
.   elsif param.type = "int64_t"
" PRId64 "\
.   elsif param.type = "const std::string&"
s\
.   endif
.endfor
",
.for event.param
.   if index(param) > 1
, \
.   else
        \
.   endif
.   if param.type = "const std::string&"
$(param.name).c_str()\
.   else
$(param.name)\
.   endif
.endfor
);
}

.endfor
\
///////////////////////////////////// PRIVATE //////////////////////////////////

//=================================== LIFECYCLE ================================
 
Logger::Logger(
        const std::string& ident,
        int facility,
        int level) :
    ident_(ident),
    levels_() {

    levels_[0] = level;
    levels_[1] = LOG_INFO;
    levels_[2] = LOG_WARNING;
    levels_[3] = LOG_DEBUG;

    if (ident_.empty()) {
        openlog(NULL, LOG_PID | LOG_NDELAY, facility);
    } else {
        openlog(ident_.c_str(), LOG_PID | LOG_NDELAY, facility);
    }
}

} // namespace slog
.endtemplate
